html, body
  font-family "Lucida Console", Monaco, monospace
  margin 0
  padding 0
  color #575757

// layout - min
body.min
  padding 5px
  section
    display block
    margin 0px
    padding 4px 4px
    .main
      min-height 300px
      margin 0
      padding 0
      h3
        margin 5px 0 0 3px
        font-weight bold

// layout - error
body.error
  section
    display block
    margin 0px
    padding 0px
    .main
      min-height 300px
      margin 0
      padding 0
      h1
        margin 5px
        padding 0
        font-weight normal
