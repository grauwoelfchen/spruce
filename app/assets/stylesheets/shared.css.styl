// messages
.flash-messages,
.error-messages
  ul
    margin  9px 0px
    padding 0px
    li
      list-style none
    li.alert
      color red
    li.notice
      color green


// navigation
fs-style(type)
  color gray
  a
    text-decoration none
    &:hover
      text-decoration underline
    if type == 'file'
      font-weight normal
      color       #696969
    else
      font-weight bold
      color       #008080
active-style()
  font-weight bold
  color       #484848

p.navigation
  margin 13px 0px
  span.title
    margin      0px
    active-style()
  span.parenthesis-highlight
    background-color lightgray
    active-style()

p.path
  fs-style('directory')
  span.wd
    font-weight bold

// logout
.user
  form.button_to
    display inline
    margin  0
    padding 0
    div
      display inline
    input[type=submit]
      margin             0
      padding            0
      -webkit-appearance caret
      background         none
      border             none
      font-size          inherit
      font-family        inherit
      cursor             pointer
      text-decoration    underline
      color              #0000FF

// filesystem
ul.nodes
  li
    span.name
      fs-style('directory')
ul.notes
  li
    span.name
      fs-style('file')
ul.nodes, ul.notes
  li
    list-style none
    span.updated
      padding   0 3px
      font-size 85%
      color     silver

button-style()
  text-decoration  none
  color            black
  background-color #FCFCFC
  border           1px solid #EBEBEB
  padding          4px 8px
  display          inline-block
  outline          none
  font-size        90%
  letter-spacing   0.02em
  line-height      1.44
  &:hover
    background-color #EDEDED

.links
  height 27px

.actions
  display block
  height  48px
  margin  18px 0px 0px 1px
  .reset,.cancel
    float left
    a
      button-style()
      margin 9px 0px 0px 3px
      color  dimgray
      &:hover
        color black
  .destroy
    float left
    a
      button-style()
      margin 9px 0px 0px 3px
      color  dimgray

// form
section
  form
    .field_with_errors
      display inline
      label
        color red
    .field
      label
        display block
        margin  3px 0px 0px 1px
      input
        outline none
        border  1px solid silver
        margin  2px 0px 4px 0px
        padding 3px 5px
        &:focus
          background-color #EDEDED
      input[type='checkbox']
        margin 5px 1px
      textarea
        margin 0px
    .actions
      input[type='submit']
        button-style()
        margin 9px 10px 9px -1px
        float  left
        left   5px

// placeholders
placeholder-text = #4682B4
placeholder-style()
  color      placeholder-text
  font-style italic
  opacity    0.3

*::-webkit-input-placeholder
  placeholder-style()
*:-moz-placeholder
  placeholder-style()
*::-moz-placeholder
  placeholder-style()
*:-ms-input-placeholder
  placeholder-style()
