// index
ul.notes
  padding 0
  margin  9px 0 0 0

// show
.note
  margin 9px 0 0 0
  span.updated
    color silver
  pre
    border-top 1px solid #EBEBEB
    padding    9px 0px
    margin     9px 0px
    width      700px

// canvas
.set-number
  margin 18px 0px 9px 0px
textarea#canvas
  resize       none
  padding      0px 4px 3px 4px
  margin       0px
  border       none
  border-bottom 1px dashed #D8D8D8
  overflow     auto
  min-height   138px
  min-width    700px
  &:focus
    background-color #FCFCFC
