- if @node.errors.any?
  = render "shared/errors", resource: @node
= form_for shallow_args(@node) do |f|
  .field
    = f.label :name
    = f.text_field :name, placeholder: "e.g. sprouts", autofocus: true
  .actions
    = f.submit "Save"
    | &nbsp;
    .back
      - node = @node.new_record? ? @parent : @node
      = link_to "Back", node_path(node)
